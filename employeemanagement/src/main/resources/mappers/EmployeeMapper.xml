<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chipmong.com.employeemanagement.mapper.EmployeeMapper">

  <resultMap id="EmployeeResultMap" type="chipmong.com.employeemanagement.model.Employee">
    <id property="id" column="id" />
    <result property="firstName" column="first_name" />
    <result property="lastName" column="last_name" />
    <result property="email" column="email" />
    <result property="salary" column="salary" />
  </resultMap>

  <select id="findAll" resultMap="EmployeeResultMap">
    SELECT * FROM employees
  </select>

  <select id="findById" parameterType="int" resultMap="EmployeeResultMap">
    SELECT * FROM employees WHERE id = #{id}
  </select>

  <insert id="insert" parameterType="chipmong.com.employeemanagement.model.Employee" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO employees (first_name, last_name, email, salary)
    VALUES (#{firstName}, #{lastName}, #{email}, #{salary})
  </insert>

  <update id="update" parameterType="chipmong.com.employeemanagement.model.Employee">
    UPDATE employees
    SET first_name = #{firstName},
        last_name = #{lastName},
        email = #{email},
        salary = #{salary}
    WHERE id = #{id}
  </update>

  <delete id="delete" parameterType="int">
    DELETE FROM employees WHERE id = #{id}
  </delete>

</mapper>
